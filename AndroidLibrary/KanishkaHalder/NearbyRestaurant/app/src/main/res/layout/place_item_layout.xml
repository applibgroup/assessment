<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scaleType="centerCrop"
    android:background="@android:color/white"
    app:cardCornerRadius="15dp"
    android:layout_margin="15dp"
    app:cardElevation="100dp">
        <LinearLayout
            android:id="@+id/LL_layout_place_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
<!--            <ImageView-->
<!--                android:id="@+id/image_view_place_item"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="180dp"-->
<!--                android:adjustViewBounds="true"-->
<!--                android:scaleType="fitXY"-->
<!--                android:src="@mipmap/ic_launcher"-->
<!--                />-->
            <TextView
                android:id="@+id/text_view_title_place_feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                android:text="Title"
                android:textColor="@android:color/primary_text_light"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/text_view_desc_place_feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:text="Description"
                android:textColor="@android:color/secondary_text_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/text_view_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Distance:"
                    />
                <TextView
                    android:id="@+id/text_view_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Date Time"
                    android:layout_marginStart="50dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
