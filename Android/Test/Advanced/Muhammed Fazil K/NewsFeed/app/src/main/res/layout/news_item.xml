            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/newsdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newstitle"
            android:layout_toRightOf="@+id/newsimage"
            android:maxLines="3"
            android:text="TL;D11 as of Mat price.\n\nBy unlocking the secrets of SEO, you can drive more traffic to your website without breaking the bank. All you need is about 15 hours aâ€¦"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/newstime"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="2021-05-25"
            android:textColor="@color/black"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>