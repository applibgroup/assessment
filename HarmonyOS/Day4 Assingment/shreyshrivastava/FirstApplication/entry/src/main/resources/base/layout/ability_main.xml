<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Image
        ohos:id="$+id:image_main"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="150vp"
        ohos:start_margin="40vp"
        ohos:bottom_margin="20vp"
        ohos:image_src="$media:cat"
        />

    <Button
        ohos:id="$+id:button_main_signup"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_signup"
        ohos:layout_alignment="horizontal_center"
        ohos:margin="20vp"
        ohos:padding="5vp"
        ohos:text="Sign Up"
        ohos:text_size="30vp"
        />

    <Button
        ohos:id="$+id:button_main_login"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_login"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="5vp"
        ohos:text="Login"
        ohos:text_size="30vp"
        />
</DirectionalLayout>