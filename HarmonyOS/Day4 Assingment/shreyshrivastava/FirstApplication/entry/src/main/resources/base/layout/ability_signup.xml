<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="20vp"
        ohos:bottom_margin="20vp"
        ohos:padding="10vp"
        ohos:text="Sign Up"
        ohos:text_size="40vp"
        ohos:layout_alignment="horizontal_center"
        />

    <TextField
        ohos:id="$+id:text_first_name"
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:hint="First Name"
        ohos:hint_color="$ohos:color:id_color_background"
        ohos:text_size="20vp"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:bottom_margin="30vp"
        ohos:start_padding="5vp"
        ohos:background_element="$graphic:background_ability_signup"
        />

    <TextField
        ohos:id="$+id:text_last_name"
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:hint="Last Name"
        ohos:hint_color="$ohos:color:id_color_background"
        ohos:text_size="20vp"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:start_padding="5vp"
        ohos:background_element="$graphic:background_ability_signup"
        />
    <Text
        ohos:id="$+id:text_error_last_name"
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:text="Invalid last name - it can't be alphanumeric."
        ohos:text_size="15vp"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:start_padding="5vp"
        ohos:visibility="invisible"
        />
    <TextField
        ohos:id="$+id:text_email"
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:hint="Email"
        ohos:hint_color="$ohos:color:id_color_background"
        ohos:text_size="20vp"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:start_padding="5vp"
        ohos:background_element="$graphic:background_ability_signup"
        />
    <Text
        ohos:id="$+id:text_error_email"
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:text="Incorrect email format."
        ohos:text_size="15vp"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:start_padding="5vp"
        ohos:visibility="invisible"
        />
    <TextField
        ohos:id="$+id:text_password"
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:hint="Password"
        ohos:hint_color="$ohos:color:id_color_background"
        ohos:text_size="20vp"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:start_padding="5vp"
        ohos:background_element="$graphic:background_ability_signup"
        />
    <Text
        ohos:id="$+id:text_error_password"
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:text="Weak password - must contain atleast 5 char."
        ohos:text_size="15vp"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:start_padding="5vp"
        ohos:visibility="invisible"
        />
    <TextField
        ohos:id="$+id:text_mobile"
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:hint="Mobile"
        ohos:hint_color="$ohos:color:id_color_background"
        ohos:text_size="20vp"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:start_padding="5vp"
        ohos:background_element="$graphic:background_ability_signup"
        />
    <Text
        ohos:id="$+id:text_error_mobile"
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:text="Invalid phone number format."
        ohos:text_size="15vp"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:bottom_margin="10vp"
        ohos:start_padding="5vp"
        ohos:visibility="invisible"
        />
    <Text
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:start_padding="5vp"
        ohos:text="Gender"
        ohos:text_size="25vp"
        />

   <RadioContainer
       ohos:id="$+id:radio_container"
       ohos:height="30vp"
       ohos:width="match_content"
       ohos:top_margin="10vp"
       ohos:bottom_margin="5vp"
       ohos:start_margin="20vp"
       ohos:end_margin="20vp"
       ohos:start_padding="5vp"
       ohos:orientation="horizontal">

       <RadioButton
           ohos:id="$+id:radio_button_male"
           ohos:height="match_parent"
           ohos:width="match_content"
           ohos:right_margin="50vp"
           ohos:text="Male"
           ohos:text_size="20vp"
           />

       <RadioButton
           ohos:id="$+id:radio_button_female"
           ohos:height="match_parent"
           ohos:width="match_content"
           ohos:text="Female"
           ohos:text_size="20vp"
           />
   </RadioContainer>

    <Text
        ohos:id="$+id:text_error_gender"
        ohos:height="30vp"
        ohos:width="match_parent"
        ohos:text="Choose gender."
        ohos:text_size="15vp"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:start_margin="20vp"
        ohos:end_margin="20vp"
        ohos:bottom_margin="30vp"
        ohos:start_padding="5vp"
        ohos:visibility="invisible"
        />

    <Button
       ohos:id="$+id:button_signup"
       ohos:height="match_content"
       ohos:width="match_content"
       ohos:padding="5vp"
       ohos:text="Sign Up"
       ohos:text_size="25vp"
       ohos:background_element="$graphic:background_ability_signup"
       ohos:layout_alignment="horizontal_center"
       />



</DirectionalLayout>