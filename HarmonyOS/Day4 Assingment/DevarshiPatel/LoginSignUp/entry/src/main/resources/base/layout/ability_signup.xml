<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:background_element="color:orange"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:heading"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="Sign Up"
        ohos:top_margin="20"
        ohos:layout_alignment="center"
        ohos:text_size="40fp"
        ohos:text_alignment="center"
        />
    <TextField
        ohos:id="$+id:firstname"
        ohos:below="$id:heading"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:text_cursor_visible="true"
        ohos:padding_for_text="true"
        ohos:basement="#000099"
        ohos:text_size="30fp"
        ohos:top_margin="20"
        ohos:text_alignment="vertical_center"
        ohos:hint="First Name"/>
    <Text
        ohos:visibility="invisible"
        ohos:below="$id:firstname"
        ohos:id="$+id:fname_error"
        ohos:top_margin="10"
        ohos:text="None"
        ohos:text_color="red"
        ohos:height="20vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:padding_for_text="true"
        ohos:basement="#000099"
        ohos:text_size="15fp"
        ohos:text_alignment="vertical_center"
        />
    <TextField
        ohos:id="$+id:lastname"
        ohos:below="$id:fname_error"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:text_cursor_visible="true"
        ohos:padding_for_text="true"
        ohos:center_in_parent="true"
        ohos:basement="#000099"
        ohos:text_size="30fp"
        ohos:top_margin="50"
        ohos:text_alignment="vertical_center"
        ohos:hint="Last Name"
        />
    <Text
        ohos:visibility="invisible"
        ohos:below="$id:lastname"
        ohos:id="$+id:lname_error"
        ohos:top_margin="10"
        ohos:text="None"
        ohos:text_color="red"
        ohos:height="20vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:padding_for_text="true"
        ohos:basement="#000099"
        ohos:text_size="15fp"
        ohos:text_alignment="vertical_center"
        />
    <TextField
        ohos:id="$+id:email"
        ohos:below="$id:lname_error"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:text_cursor_visible="true"
        ohos:padding_for_text="true"
        ohos:center_in_parent="true"
        ohos:basement="#000099"
        ohos:text_size="30fp"
        ohos:background_element="white"
        ohos:top_margin="50"
        ohos:text_alignment="vertical_center"
        ohos:hint="Email"/>
    <Text
        ohos:visibility="invisible"
        ohos:below="$id:email"
        ohos:id="$+id:email_error"
        ohos:top_margin="10"
        ohos:text="None"
        ohos:text_color="red"
        ohos:height="20vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:padding_for_text="true"
        ohos:basement="#000099"
        ohos:text_size="15fp"
        ohos:text_alignment="vertical_center"
        />
    <TextField
        ohos:id="$+id:password"
        ohos:below="$id:email_error"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:text_cursor_visible="true"
        ohos:padding_for_text="true"
        ohos:center_in_parent="true"
        ohos:basement="#000099"
        ohos:text_size="30fp"
        ohos:top_margin="50"
        ohos:text_alignment="vertical_center"
        ohos:hint="Password"/>
    <Text
        ohos:visibility="invisible"
        ohos:below="$id:password"
        ohos:id="$+id:password_error"
        ohos:top_margin="10"
        ohos:text="None"
        ohos:text_color="red"
        ohos:height="20vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:padding_for_text="true"
        ohos:basement="#000099"
        ohos:text_size="15fp"
        ohos:text_alignment="vertical_center"
        />
    <TextField
        ohos:id="$+id:mobile"
        ohos:below="$id:password_error"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:text_cursor_visible="true"
        ohos:padding_for_text="true"
        ohos:center_in_parent="true"
        ohos:basement="#000099"
        ohos:text_size="30fp"
        ohos:top_margin="50"
        ohos:text_alignment="vertical_center"
        ohos:hint="Mobile"/>
    <Text
        ohos:visibility="invisible"
        ohos:below="$id:mobile"
        ohos:id="$+id:mobile_error"
        ohos:top_margin="10"
        ohos:text="None"
        ohos:text_color="red"
        ohos:height="20vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:padding_for_text="true"
        ohos:basement="#000099"
        ohos:text_size="15fp"
        ohos:text_alignment="vertical_center"
        />
    <Text
        ohos:id="$+id:gendertext"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:mobile_error"
        ohos:text="Gender"
        ohos:layout_alignment="center"
        ohos:text_size="20fp"
        ohos:top_margin="50"
        ohos:text_alignment="center"
        />
    <RadioContainer
        ohos:below="$id:gendertext"
        ohos:id="$+id:gender_container"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="50"
        ohos:center_in_parent="true"
        ohos:focus_border_width="20"
        ohos:layout_alignment="horizontal_center"
        ohos:orientation="horizontal">
        <RadioButton
            ohos:id="$+id:male"
            ohos:height="40vp"
            ohos:marked="true"
            ohos:width="match_content"
            ohos:text="Male"
            ohos:text_size="20fp"
            ohos:start_padding="100"
            ohos:end_padding="100"/>

        <RadioButton
            ohos:id="$+id:female"
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="Female"
            ohos:text_size="20fp"
            ohos:start_padding="100"
            ohos:end_padding="100"/>
    </RadioContainer>

    <Button
        ohos:id="$+id:submit"
        ohos:below="$id:gender_container"
        ohos:focus_border_enable="true"
        ohos:focus_border_width="200"
        ohos:focus_border_padding="40"
        ohos:top_margin="50"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:text="Create New Account"
        ohos:background_element="$ohos:color:id_color_button_normal"
        ohos:text_size="20fp"
        ohos:start_padding="20"
        ohos:top_padding="10"
        ohos:left_padding="20"
        ohos:right_padding="20"
        ohos:bottom_padding="10"/>

</DependentLayout>