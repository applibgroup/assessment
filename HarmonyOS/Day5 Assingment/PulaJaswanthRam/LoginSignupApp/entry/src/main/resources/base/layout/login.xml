<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="$string:MYAPP"
        ohos:text_size="30fp"
        ohos:top_margin="50"
        ohos:text_alignment="center"/>

    <TextField
        ohos:id="$+id:email"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="$string:Email"
        ohos:text_alignment="vertical_center"
        ohos:layout_alignment="center"
        ohos:top_margin="15fp"
        ohos:multiple_lines="false"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_size="18fp"
        />

    <Text
        ohos:id="$+id:email_error"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:EmailErr"
        ohos:text_size="13fp"
        ohos:text_color="red"
        ohos:layout_alignment="left"
        ohos:left_padding="30fp"
        ohos:visibility="hide"
        />

    <TextField
        ohos:id="$+id:password"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="$string:Password"
        ohos:text_alignment="vertical_center"
        ohos:layout_alignment="center"
        ohos:top_margin="15fp"
        ohos:multiple_lines="false"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_size="18fp"
        />

    <Button
        ohos:id="$+id:login_btn"
        ohos:height="50vp"
        ohos:width="120vp"
        ohos:text="$string:login"
        ohos:text_size="20fp"
        ohos:background_element="$ohos:color:id_color_text_primary_activated_dark"
        ohos:top_margin="40vp"
        ohos:right_margin="10vp"
        ohos:layout_alignment="right"
        />

</DirectionalLayout>