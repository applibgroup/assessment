<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#99cccc">

    <Image
        ohos:id="$+id:char_image"
        ohos:image_src="$media:charizard"
        ohos:top_margin="15vp"
        ohos:height="300vp"
        ohos:width="300vp"
        ohos:scale_mode="zoom_center"
        ohos:horizontal_center="true"
        />

    <TextField
        ohos:id="$+id:login_email"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:hint="$string:Email"
        ohos:text_size="20fp"
        ohos:top_margin="5vp"
        ohos:bottom_padding="10vp"
        ohos:top_padding="10vp"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:text_input_type="pattern_text"
        ohos:background_element="$graphic:background_text_field"
        ohos:below="$id:char_image"
        ohos:multiple_lines="false"
        ohos:center_in_parent="true"/>

    <Text
        ohos:visibility="invisible"
        ohos:id="$+id:login_email_error"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="$string:None"
        ohos:text_size="17fp"
        ohos:left_padding="10vp"
        ohos:text_color="#e22123"
        ohos:layout_alignment="left"
        ohos:below="$id:login_email"
        ohos:left_margin="35vp"/>

    <TextField
        ohos:id="$+id:login_password"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:hint="$string:Password"
        ohos:text_size="20fp"
        ohos:top_margin="35vp"
        ohos:bottom_padding="10vp"
        ohos:top_padding="10vp"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:text_input_type="pattern_password"
        ohos:background_element="$graphic:background_text_field"
        ohos:below="$id:login_email"
        ohos:multiple_lines="false"
        ohos:center_in_parent="true"/>

    <Text
        ohos:visibility="invisible"
        ohos:id="$+id:login_password_error"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="$string:None"
        ohos:text_size="17fp"
        ohos:left_padding="10vp"
        ohos:text_color="#e22123"
        ohos:layout_alignment="left"
        ohos:below="$id:login_password"
        ohos:left_margin="35vp"/>

    <Button
        ohos:id="$+id:login"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="$string:Login_text"
        ohos:text_size="22fp"
        ohos:text_alignment="center"
        ohos:bottom_padding="10vp"
        ohos:top_padding="10vp"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:background_element="#fe8019"
        ohos:top_margin="50vp"
        ohos:below="$id:login_password"
        ohos:center_in_parent="true"/>

</DependentLayout>