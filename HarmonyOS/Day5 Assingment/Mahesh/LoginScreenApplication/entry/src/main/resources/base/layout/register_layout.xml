<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:registerWelcomeText"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="$string:register_welcome_text"
        ohos:text_size="16vp"
        ohos:center_in_parent="true"
        ohos:align_parent_top="true"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="vertical"
        ohos:below="$id:registerWelcomeText"
        ohos:align_parent_left="true"
        ohos:padding="16vp">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="24vp"
                ohos:text="$string:first_name_text_field"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:id="$+id:errorFirstName"
                ohos:text="$string:name_error_text"
                ohos:text_size="12vp"
                ohos:text_color="#FFFF1E00">
            </Text>
        </DirectionalLayout>
        <TextField
            ohos:height="24vp"
            ohos:width="400vp"
            ohos:id="$+id:registerFirstName"
            ohos:hint="$string:first_name_hint"
            ohos:padding="4vp"
            ohos:text_size="12vp"
            ohos:background_element="#FFEAEAEA"/>

        <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="24vp"
                ohos:text="$string:last_name_text_field"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:id="$+id:errorLastName"
                ohos:text_size="12vp"
                ohos:text="$string:name_error_text"
                ohos:text_color="#FFFF1E00"/>
        </DirectionalLayout>
        <TextField
            ohos:height="28vp"
            ohos:width="400vp"
            ohos:id="$+id:registerLastName"
            ohos:hint="$string:last_name_hint"
            ohos:padding="4vp"
            ohos:text_size="12vp"
            ohos:background_element="#FFEAEAEA"/>

        <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal">
            <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="24vp"
            ohos:text="$string:email_text_field"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:id="$+id:errorEmail"
                ohos:text_size="12vp"
                ohos:text="$string:email_error_text"
                ohos:text_color="#FFFF1E00"/>
        </DirectionalLayout>
        <TextField
            ohos:height="28vp"
            ohos:width="400vp"
            ohos:id="$+id:registerEmail"
            ohos:hint="$string:email_hint"
            ohos:padding="4vp"
            ohos:text_size="12vp"
            ohos:background_element="#FFEAEAEA"/>

        <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal">
            <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="24vp"
            ohos:text="$string:password_text_field"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:id="$+id:errorPassword"
                ohos:text_size="12vp"
                ohos:text="$string:password_error_text"
                ohos:text_color="#FFFF1E00"/>
        </DirectionalLayout>
        <TextField
            ohos:height="28vp"
            ohos:width="400vp"
            ohos:id="$+id:registerPassword"
            ohos:hint="$string:password_hint"
            ohos:text_input_type="pattern_password"
            ohos:padding="4vp"
            ohos:text_size="12vp"
            ohos:background_element="#FFEAEAEA"/>

        <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal">
            <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="24vp"
            ohos:text="$string:mobile_text_field"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:id="$+id:errorMobile"
                ohos:text_size="12vp"
                ohos:text="$string:mobile_error_text"
                ohos:text_color="#FFFF1E00"/>
        </DirectionalLayout>
        <TextField
            ohos:height="28vp"
            ohos:width="400vp"
            ohos:id="$+id:registerMobile"
            ohos:hint="$string:mobile_hint"
            ohos:text_input_type="pattern_number"
            ohos:padding="4vp"
            ohos:text_size="12vp"
            ohos:background_element="#FFEAEAEA"/>
            <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="24vp"
            ohos:text="$string:gender_text_field"/>
        <RadioContainer
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal">
            <RadioButton
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="$string:gender_male"
                ohos:text_size="16vp"
                ohos:id="$+id:registerGenderMale"
                ohos:text_color_off="#FFA7A7A7"
                ohos:text_color_on="#FF15756D"/>
            <RadioButton
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="$string:gender_female"
                ohos:text_size="16vp"
                ohos:id="$+id:registerGenderFemale"
                ohos:text_color_off="#FFA7A7A7"
                ohos:text_color_on="#FF15756D"/>
        </RadioContainer>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal">
            <Button
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:id="$+id:registerSubmitButton"
                ohos:text="$string:submit_button_text"
                ohos:text_size="24vp"
                ohos:padding="8vp"
                ohos:background_element="#FFA7C6D0"/>
            <Text
                ohos:id="$+id:registerFailedMessage"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:padding="8vp"
                ohos:text="$string:default_error_msg"
                ohos:text_size="12vp"
                ohos:text_color="#FFFF1E00"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DependentLayout>