<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="center">


    <Text
        ohos:id="$+id:text_login"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="$string:login_button_text"
        ohos:text_size="40fp"
        ohos:text_color="$ohos:color:id_color_activated_dark"
    />

    <TextField
        ohos:id="$+id:textField_email_login_slice"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:padding="5fp"
        ohos:text_input_type="pattern_text"
        ohos:background_element="$graphic:border_background"
        ohos:text_size="20fp"
        ohos:top_margin="20vp"
        ohos:hint="Email ID"
        />

    <TextField
        ohos:id="$+id:textField_password_login_slice"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:text_size="20fp"
        ohos:text_input_type="pattern_password"
        ohos:padding="5fp"
        ohos:background_element="$graphic:border_background"
        ohos:top_margin="20vp"
        ohos:hint="Password"
        />

    <Button
        ohos:id="$+id:button_login_login_slice"
        ohos:layout_alignment="horizontal_center"
        ohos:height="match_content"
        ohos:width="120vp"
        ohos:text="$string:login_button_text"
        ohos:text_size="20fp"
        ohos:text_color="#FFFFFF"
        ohos:background_element="#000000"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:bottom_padding="10vp"
        ohos:top_padding="10vp"
        ohos:margin="20vp"
        />

</DirectionalLayout>