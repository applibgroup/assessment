<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#dcdce6">
    <Text
        ohos:id="$+id:app_name"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Log In"
        ohos:text_size="30fp"
        ohos:top_margin="15fp"
        ohos:center_in_parent="true"
        ohos:above="$id:email_"
        ohos:left_margin="50fp"
        ohos:bottom_margin="30fp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:above="$id:er3_"
        ohos:id="$+id:email_"
        ohos:bottom_margin="5fp"
        ohos:focus_border_enable="true"
        ohos:hint="Email"
        ohos:padding_for_text="true"
        ohos:left_padding="10fp"
        ohos:text_size="20fp"
        ohos:center_in_parent="true"
        ohos:background_element="white"
        />
    <Text
        ohos:id="$+id:er3_"
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:text="Incorrect Email format"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:visibility="invisible"
        ohos:text_size="10fp"
        ohos:top_margin="3fp"
        ohos:center_in_parent="true"
        ohos:above="$id:password_"
        ohos:left_padding="10fp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:text_input_type="pattern_password"
        ohos:id="$+id:password_"
        ohos:focus_border_enable="true"
        ohos:hint="Password"
        ohos:padding_for_text="true"
        ohos:left_padding="10fp"
        ohos:text_size="20fp"
        ohos:center_in_parent="true"
        ohos:background_element="white"
        />
    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$id:login_btn"
        ohos:text="Log In"
        ohos:below="$id:password_"
        ohos:background_element="white"
        ohos:center_in_parent="true"
        ohos:top_margin="20fp"
        ohos:left_padding="10fp"
        ohos:top_padding="5fp"
        ohos:bottom_padding="5fp"
        ohos:right_padding="10fp"
        ohos:text_size="20fp"
        />
    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$id:signup_btn"
        ohos:text="Sign Up"
        ohos:below="$id:login_btn"
        ohos:background_element="white"
        ohos:center_in_parent="true"
        ohos:top_margin="20fp"
        ohos:left_padding="10fp"
        ohos:top_padding="5fp"
        ohos:bottom_padding="5fp"
        ohos:right_padding="10fp"
        ohos:text_size="20fp"
        />
</DependentLayout>