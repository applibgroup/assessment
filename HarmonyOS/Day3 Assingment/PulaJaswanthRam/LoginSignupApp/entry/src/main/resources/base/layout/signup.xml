<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="$string:MYAPP"
        ohos:text_size="30fp"
        ohos:top_margin="50"
        ohos:text_alignment="center"/>

    <TextField
        ohos:id="$+id:fName"
        ohos:height="match_content"
        ohos:width="300fp"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="$string:FirstName"
        ohos:text_alignment="vertical_center"
        ohos:layout_alignment="center"
        ohos:top_margin="15fp"
        ohos:multiple_lines="false"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_size="18fp"
        />

    <TextField
        ohos:id="$+id:lName"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:background_element="$graphic:background_text_field"
        ohos:below="$id:fName"
        ohos:hint="$string:LastName"
        ohos:text_alignment="vertical_center"
        ohos:layout_alignment="center"
        ohos:top_margin="15fp"
        ohos:multiple_lines="false"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_size="18fp"
        />

    <Text
        ohos:id="$+id:lName_error"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:LastNameErr"
        ohos:text_size="13fp"
        ohos:text_color="red"
        ohos:layout_alignment="left"
        ohos:left_padding="30fp"
        ohos:visibility="hide"
        />

    <TextField
        ohos:id="$+id:email"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="$string:Email"
        ohos:text_alignment="vertical_center"
        ohos:layout_alignment="center"
        ohos:top_margin="15fp"
        ohos:multiple_lines="false"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_size="18fp"
        />

    <Text
        ohos:id="$+id:email_error"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:EmailErr"
        ohos:text_size="13fp"
        ohos:text_color="red"
        ohos:layout_alignment="left"
        ohos:left_padding="30fp"
        ohos:visibility="hide"
        />

    <TextField
        ohos:id="$+id:password"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="$string:Password"
        ohos:text_alignment="vertical_center"
        ohos:layout_alignment="center"
        ohos:top_margin="15fp"
        ohos:multiple_lines="false"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_size="18fp"
        />

    <Text
        ohos:id="$+id:password_error"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:PasswordErr"
        ohos:text_size="13fp"
        ohos:text_color="red"
        ohos:layout_alignment="left"
        ohos:left_padding="30fp"
        ohos:visibility="hide"
        />

    <TextField
        ohos:id="$+id:mobile"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="$string:Mobile"
        ohos:text_alignment="vertical_center"
        ohos:layout_alignment="center"
        ohos:top_margin="15fp"
        ohos:multiple_lines="false"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_size="18fp"
        />

    <Text
        ohos:id="$+id:mobile_error"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:MobileErr"
        ohos:text_size="13fp"
        ohos:text_color="red"
        ohos:layout_alignment="left"
        ohos:left_padding="30fp"
        ohos:visibility="hide"
        />

    <DirectionalLayout
        ohos:id="$+id:gender"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:orientation="vertical"
        ohos:left_padding="30fp"
        ohos:below="$id:mobile">
        <Text
            ohos:height="match_content"
            ohos:width="300vp"
            ohos:top_margin="40"
            ohos:text="$string:gender"
            ohos:text_size="20fp"
            ohos:layout_alignment="left"
            ohos:multiple_lines="true"/>

        <RadioContainer
            ohos:id="$+id:radio_container"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:layout_direction="ltr"
            ohos:orientation="horizontal"
            ohos:left_margin="50">
            <RadioButton
                ohos:id="$+id:Male_btn"
                ohos:height="40vp"
                ohos:width="100vp"
                ohos:text="$string:male"
                ohos:text_size="18fp"
                ohos:text_alignment="vertical_center"
                ohos:background_element="$graphic:background_radio_btn"
                ohos:margin="8vp"/>
            <RadioButton
                ohos:id="$+id:female_btn"
                ohos:height="40vp"
                ohos:width="100vp"
                ohos:text="$string:female"
                ohos:text_size="18fp"
                ohos:text_alignment="vertical_center"
                ohos:background_element="$graphic:background_radio_btn"
                ohos:margin="8vp"/>
        </RadioContainer>

        <Button
            ohos:id="$+id:signup_btn"
            ohos:height="50vp"
            ohos:width="120vp"
            ohos:text="$string:Signup"
            ohos:text_size="20fp"
            ohos:background_element="$ohos:color:id_color_text_primary_activated_dark"
            ohos:top_margin="40vp"
            ohos:right_margin="10vp"
            ohos:layout_alignment="right"
            />

    </DirectionalLayout>
</DirectionalLayout>