<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="center"
    >

    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:id="$+id:EmailLoginText"
        ohos:hint="$string:email"
        ohos:basement="#000000"
        ohos:text_size="20fp"
        ohos:left_padding="20fp"
        ohos:right_padding="20fp"
        ohos:text_input_type="pattern_text"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:id="$+id:PasswordLoginText"
        ohos:hint="$string:password"
        ohos:basement="#000000"
        ohos:below="$id:EmailLoginText"
        ohos:top_margin="20fp"
        ohos:text_size="20fp"
        ohos:left_padding="20fp"
        ohos:right_padding="20fp"
        ohos:text_input_type="pattern_password"
        />
    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:LoginBtn2"
        ohos:text="$string:lgin"
        ohos:text_size="30fp"
        ohos:background_element="#3c6ee6"
        ohos:top_margin="50fp"
        ohos:left_padding="10fp"
        ohos:right_padding="10fp"
        ohos:horizontal_center="true"
        ohos:below="$id:PasswordLoginText"
        />

</DependentLayout>