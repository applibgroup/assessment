<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:loginWelcomeText"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Welcome to the login page"
        ohos:text_size="16vp"
        ohos:center_in_parent="true"
        ohos:align_parent_top="true"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="vertical"
        ohos:below="$id:loginWelcomeText"
        ohos:padding="16vp">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="24vp"
            ohos:text="Email"/>
        <TextField
            ohos:height="24vp"
            ohos:width="400vp"
            ohos:id="$+id:loginEmail"
            ohos:hint="john@example.com"
            ohos:text_size="12vp"
            ohos:padding="2vp"
            ohos:background_element="#FFEAEAEA"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="24vp"
            ohos:text="Password"/>
        <TextField
            ohos:height="24vp"
            ohos:width="400vp"
            ohos:id="$+id:loginPassword"
            ohos:hint="password"
            ohos:text_input_type="pattern_password"
            ohos:padding="4vp"
            ohos:text_size="12vp"
            ohos:background_element="#FFEAEAEA"/>
        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Submit"
            ohos:id="$+id:loginSubmitButton"
            ohos:text_size="24vp"
            ohos:padding="4vp"
            ohos:margin="8vp"
            ohos:background_element="#FFA7C6D0"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:loginFailedErrorMessage"
            ohos:text_size="12vp"
            ohos:text_color="#FFFF1E00"/>
    </DirectionalLayout>
</DependentLayout>