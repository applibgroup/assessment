<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:signup_page_header"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Sign Up Page"
        ohos:text_size="40fp"
        ohos:padding="10fp"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="30fp"/>

    <TextField
        ohos:id="$+id:firstname"
        ohos:height="35fp"
        ohos:width="310fp"
        ohos:element_top="$id:signup_page_header"
        ohos:top_margin="80fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#F5F5F5"
        ohos:left_padding="8fp"
        ohos:hint="First Name"
        ohos:hint_color="#808080"
        ohos:text_color="black"
        ohos:text_font="sans-serif-medium"
        ohos:text_size="20fp"/>

    <Text
        ohos:id="$+id:firstname_error"
        ohos:height="match_content"
        ohos:width="310fp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="#FF0000"
        ohos:element_top="$id:firstname"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="5fp"
        ohos:text_size="15fp"
        ohos:left_padding="8fp"
        ohos:text="Please enter valid first name"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:lastname"
        ohos:height="35fp"
        ohos:width="310fp"
        ohos:element_top="$id:firstname_error"
        ohos:top_margin="15fp"
        ohos:left_padding="8fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#F5F5F5"
        ohos:hint="Last Name"
        ohos:hint_color="#808080"
        ohos:text_color="black"
        ohos:text_font="sans-serif-medium"
        ohos:text_size="20fp"/>

    <Text
        ohos:id="$+id:lastname_error"
        ohos:height="match_content"
        ohos:width="310fp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="#FF0000"
        ohos:element_top="$id:lastname"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="5fp"
        ohos:text_size="15fp"
        ohos:left_padding="8fp"
        ohos:text="Please enter valid last name"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:email"
        ohos:height="35fp"
        ohos:width="310fp"
        ohos:element_top="$id:lastname_error"
        ohos:top_margin="15fp"
        ohos:left_padding="8fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#F5F5F5"
        ohos:hint="Email"
        ohos:hint_color="#808080"
        ohos:text_color="black"
        ohos:text_font="sans-serif-medium"
        ohos:text_size="20fp"/>

    <Text
        ohos:id="$+id:email_error"
        ohos:height="match_content"
        ohos:width="310fp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="#FF0000"
        ohos:element_top="$id:email"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="5fp"
        ohos:text_size="15fp"
        ohos:left_padding="8fp"
        ohos:text="Please enter valid email address"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:password"
        ohos:height="35fp"
        ohos:width="310fp"
        ohos:element_top="$id:email_error"
        ohos:top_margin="15fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#F5F5F5"
        ohos:left_padding="8fp"
        ohos:hint="Password"
        ohos:hint_color="#808080"
        ohos:text_color="black"
        ohos:text_input_type="pattern_password"
        ohos:text_font="sans-serif-medium"
        ohos:text_size="20fp"/>

    <Text
        ohos:id="$+id:password_error"
        ohos:height="match_content"
        ohos:width="310fp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="#FF0000"
        ohos:element_top="$id:password"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="5fp"
        ohos:text_size="15fp"
        ohos:left_padding="8fp"
        ohos:text="Password should contain atleast 5 characters and 1 special character"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:mobile"
        ohos:height="35fp"
        ohos:width="310fp"
        ohos:element_top="$id:password_error"
        ohos:top_margin="15fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#F5F5F5"
        ohos:left_padding="8fp"
        ohos:hint="Mobile Number"
        ohos:hint_color="#808080"
        ohos:text_color="black"
        ohos:text_input_type= "pattern_number"
        ohos:text_font="sans-serif-medium"
        ohos:text_size="20fp"/>

    <Text
        ohos:id="$+id:mobile_error"
        ohos:height="match_content"
        ohos:width="310fp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="#FF0000"
        ohos:element_top="$id:mobile"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="5fp"
        ohos:text_size="15fp"
        ohos:left_padding="8fp"
        ohos:text="Please enter valid mobile number"
        ohos:visibility="hide"/>

    <RadioContainer
        ohos:id="$+id:radio_container"
        ohos:height="35fp"
        ohos:width="310fp"
        ohos:component_description="Gender"
        ohos:layout_alignment="center"
        ohos:text_size="20fp"
        ohos:background_element="#F5F5F5"
        ohos:top_margin="15fp"
        ohos:orientation="horizontal">
        <RadioButton
            ohos:height="match_content"
            ohos:width="103.3fp"
            ohos:text="Male"
            ohos:text_color_off="gray"
            ohos:text_color_on="#696969"
            ohos:text_size="20fp"
            ohos:layout_alignment="vertical_center"
            ohos:id="$+id:gender_male"/>
        <RadioButton
            ohos:height="match_content"
            ohos:width="103.3fp"
            ohos:text="Female"
            ohos:text_color_off="gray"
            ohos:text_color_on="#696969"
            ohos:text_size="20fp"
            ohos:layout_alignment="vertical_center"
            ohos:id="$+id:gender_female"/>
        <RadioButton
            ohos:height="match_content"
            ohos:width="103.3fp"
            ohos:text="Other"
            ohos:text_color_off="gray"
            ohos:text_color_on="#696969"
            ohos:text_size="20fp"
            ohos:layout_alignment="vertical_center"
            ohos:id="$+id:gender_other"/>
    </RadioContainer>
    <Button
        ohos:id="$+id:signup_button"
        ohos:height="45fp"
        ohos:text_alignment="center"
        ohos:width="150fp"
        ohos:element_top="$id:radio_container"
        ohos:top_margin="40fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Sign Up"
        ohos:background_element="#F5F5F5"
        ohos:text_color="black"
        ohos:text_size="25fp"></Button>



</DirectionalLayout>