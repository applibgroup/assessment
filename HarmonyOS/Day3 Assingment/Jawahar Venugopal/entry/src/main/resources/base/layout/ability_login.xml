<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="MYAPP"
        ohos:text_color="#FF3F7FFF"
        ohos:text_font="monospace"
        ohos:text_size="40fp"
        ohos:top_padding="50vp"/>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="vertical">

        <TextField
            ohos:id="$+id:username"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_text_field"
            ohos:hint="Email ID"
            ohos:left_margin="20vp"
            ohos:multiple_lines="false"
            ohos:padding="10vp"
            ohos:right_margin="20vp"
            ohos:text_alignment="vertical_center"
            ohos:text_color="#FF000000"
            ohos:text_size="15fp"
            ohos:top_margin="10vp"/>

        <Text
            ohos:id="$+id:username_error"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="15vp"
            ohos:text="Incorrect username"
            ohos:text_color="$ohos:color:id_color_badge_red"
            ohos:text_size="12fp"
            ohos:visibility="hide"/>

        <TextField
            ohos:id="$+id:password"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_text_field"
            ohos:hint="Password"
            ohos:left_margin="20vp"
            ohos:multiple_lines="false"
            ohos:padding="10vp"
            ohos:right_margin="20vp"
            ohos:text_alignment="vertical_center"
            ohos:text_color="#FF000000"
            ohos:text_input_type="pattern_password"
            ohos:text_size="15fp"
            ohos:top_margin="10vp"/>

        <Text
            ohos:id="$+id:password_error"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="15vp"
            ohos:text="Incorrect Password"
            ohos:text_color="$ohos:color:id_color_badge_red"
            ohos:text_size="12fp"
            ohos:visibility="hide"/>

        <com.applib.jawahar_venugopal.hmosassignment.customview.CustomButton
            ohos:id="$+id:login"
            ohos:height="50vp"
            ohos:width="150vp"
            ohos:button_color="#FF3F7FFF"
            ohos:button_text="Login"
            ohos:button_text_color="#FFFFFFFF"
            ohos:button_text_size="45"
            ohos:top_margin="40vp"/>

        <Text
            ohos:id="$+id:login_success"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Done"
            ohos:visibility="invisible"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="#FF3F7FFF"
            ohos:text_size="25fp"
            ohos:top_padding="50vp"/>
    </DirectionalLayout>

</DirectionalLayout>