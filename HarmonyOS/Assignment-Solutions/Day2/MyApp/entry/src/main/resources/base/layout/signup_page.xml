<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Image
        ohos:id="$+id:signup_page_header"
        ohos:height="$float:signup_page_header_height"
        ohos:width="$float:signup_page_header_width"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="$float:signup_page_header_top_margin"/>

    <TextField
        ohos:id="$+id:firstname"
        ohos:height="$float:signup_page_field_height"
        ohos:width="match_parent"
        ohos:background_element="$color:gray"
        ohos:hint="$string:first_name"
        ohos:hint_color="$color:black"
        ohos:text_color="$color:white"
        ohos:end_margin="$float:signup_end_margin"
        ohos:start_margin="$float:signup_start_margin"
        ohos:top_margin="$float:signup_page_first_name_top_margin"
        ohos:top_padding="$float:signup_page_field_padding"
        ohos:bottom_padding="$float:signup_page_field_padding"
        ohos:text_font="sans-serif-medium"
        ohos:text_size="$float:signup_page_field_text_size"/>

    <Text
        ohos:id="$+id:firstname_error"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="$ohos:color:id_color_alert"
        ohos:text_size="$float:signup_page_error_text_size"
        ohos:text="$string:first_name_error_text"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:lastname"
        ohos:height="$float:signup_page_field_height"
        ohos:width="match_parent"
        ohos:background_element="$color:gray"
        ohos:hint="$string:last_name"
        ohos:hint_color="$color:black"
        ohos:text_color="$color:white"
        ohos:end_margin="$float:signup_end_margin"
        ohos:start_margin="$float:signup_start_margin"
        ohos:top_margin="$float:signup_page_field_top_margin"
        ohos:top_padding="$float:signup_page_field_padding"
        ohos:bottom_padding="$float:signup_page_field_padding"
        ohos:text_font="sans-serif-medium"
        ohos:text_size="$float:signup_page_field_text_size"/>

    <Text
        ohos:id="$+id:lastname_error"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="$ohos:color:id_color_alert"
        ohos:text="$string:last_name_error_text"
        ohos:start_margin="$float:signup_start_margin"
        ohos:text_size="$float:signup_page_error_text_size"
        ohos:visibility="hide"/>
    <TextField
        ohos:id="$+id:email"
        ohos:height="$float:signup_page_field_height"
        ohos:width="match_parent"
        ohos:background_element="$color:gray"
        ohos:hint="$string:email"
        ohos:hint_color="$color:black"
        ohos:component_description="$string:email"
        ohos:end_margin="$float:signup_end_margin"
        ohos:top_margin="$float:signup_page_field_top_margin"
        ohos:start_margin="$float:signup_start_margin"
        ohos:top_padding="$float:signup_page_field_padding"
        ohos:bottom_padding="$float:signup_page_field_padding"
        ohos:text_color="$color:white"
        ohos:text_font="sans-serif-medium"
        ohos:text_size="$float:signup_page_field_text_size"/>

    <Text
        ohos:id="$+id:email_error"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="$ohos:color:id_color_alert"
        ohos:text_size="$float:signup_page_error_text_size"
        ohos:start_margin="$float:signup_start_margin"
        ohos:text="$string:email_error_text"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:password"
        ohos:height="$float:signup_page_field_height"
        ohos:width="match_parent"
        ohos:background_element="$color:gray"
        ohos:hint_color="$color:black"
        ohos:text_color="$color:white"
        ohos:text_input_type="pattern_password"
        ohos:hint="$string:password"
        ohos:end_margin="$float:signup_end_margin"
        ohos:top_margin="$float:signup_page_field_top_margin"
        ohos:start_margin="$float:signup_start_margin"
        ohos:top_padding="$float:signup_page_field_padding"
        ohos:bottom_padding="$float:signup_page_field_padding"
        ohos:text_font="sans-serif-medium"
        ohos:text_size="$float:signup_page_field_text_size"/>

    <Text
        ohos:id="$+id:password_error"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="$ohos:color:id_color_alert"
        ohos:text_size="$float:signup_page_error_text_size"
        ohos:start_margin="$float:signup_start_margin"
        ohos:end_margin="$float:signup_end_margin"
        ohos:text_font="bold"
        ohos:multiple_lines="true"
        ohos:text="$string:password_error_text"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:mobile"
        ohos:height="$float:signup_page_field_height"
        ohos:width="match_parent"
        ohos:background_element="$color:gray"
        ohos:hint_color="$color:black"
        ohos:text_color="$color:white"
        ohos:hint="$string:mobile"
        ohos:end_margin="$float:signup_end_margin"
        ohos:top_margin="$float:signup_page_field_top_margin"
        ohos:start_margin="$float:signup_start_margin"
        ohos:top_padding="$float:signup_page_field_padding"
        ohos:bottom_padding="$float:signup_page_field_padding"
        ohos:text_font="sans-serif-medium"
        ohos:text_size="$float:signup_page_field_text_size"/>

    <Text
        ohos:id="$+id:mobile_error"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="$ohos:color:id_color_alert"
        ohos:start_margin="$float:signup_start_margin"
        ohos:text_size="$float:signup_page_error_text_size"
        ohos:text="$string:mobile_error_text"
        ohos:multiple_lines="true"
        ohos:visibility="hide"/>
    <Text
        ohos:id="$+id:gender"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:start_margin="$float:signup_start_margin"
        ohos:top_margin="$float:signup_page_field_text_size"
        ohos:text="$string:gender"
        ohos:text_size="$float:signup_page_field_text_size"/>

    <RadioContainer
        ohos:id="$+id:radio_container"
        ohos:height="$float:signup_page_field_height"
        ohos:width="match_parent"
        ohos:component_description="$string:gender"
        ohos:end_margin="$float:signup_end_margin"
        ohos:start_margin="$float:signup_start_margin"
        ohos:top_margin="$float:radio_container_top_margin"
        ohos:bottom_margin="$float:signup_bottom_margin"
        ohos:text_size="$float:signup_page_radio_container_text_size"
        ohos:orientation="horizontal">
        <RadioButton
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:radio_male"
            ohos:text_color_off="$color:gray"
            ohos:text_color_on="$color:black"
            ohos:text_size="$float:signup_page_field_text_size"
            ohos:id="$+id:gender_male"/>
        <RadioButton
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:radio_female"
            ohos:text_color_off="$color:gray"
            ohos:text_color_on="$color:black"
            ohos:text_size="$float:signup_page_field_text_size"
            ohos:id="$+id:gender_female"/>
    </RadioContainer>
    <Button
        ohos:id="$+id:signup_btn"
        ohos:height="match_content"
        ohos:width="$float:signup_page_submit_btn_width"
        ohos:background_element="$graphic:button_background"
        ohos:bottom_padding="$float:signup_page_submit_btn_padding"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:signup"
        ohos:text_color="$ohos:color:id_color_activated_end_transparent"
        ohos:text_size="$float:signup_page_submit_btn_text_size"
        ohos:top_margin="$float:signup_page_field_top_margin"
        ohos:top_padding="$float:signup_page_submit_btn_padding"/>


</DirectionalLayout>