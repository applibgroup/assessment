<?xml version="1.0" encoding="utf-8"?>

<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="vertical_center"
    >

    <Image
        ohos:id="$+id:image"
        ohos:height="200vp"
        ohos:width="200vp"
        ohos:clip_alignment="center"
        ohos:scale_mode="zoom_center"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="horizontal_center"
        ohos:center_in_parent="true"
        ohos:image_src="$media:icon"
        />
    <Button
        ohos:id="$+id:login"
        ohos:below="$id:image"
        ohos:height="match_content"

        ohos:focus_border_enable="true"
        ohos:focus_border_width="20"
        ohos:focus_border_padding="40"
        ohos:focus_border_radius="50"
        ohos:width="match_content"
        ohos:top_margin="50"
        ohos:text_alignment="center"
        ohos:text="Login"
        ohos:horizontal_center="true"
        ohos:background_element="$ohos:color:id_color_button_normal"
        ohos:text_size="40fp"
        ohos:top_padding="10"
        ohos:left_padding="20"
        ohos:right_padding="20"
        ohos:bottom_padding="10"/>
    <Button
        ohos:id="$+id:signup"
        ohos:below="$id:login"
        ohos:focus_border_enable="true"
        ohos:focus_border_width="200"
        ohos:focus_border_padding="40"
        ohos:top_margin="50"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:text="Sign Up"
        ohos:background_element="$ohos:color:id_color_button_normal"
        ohos:text_size="40fp"
        ohos:start_padding="20"
        ohos:top_padding="10"
        ohos:left_padding="20"
        ohos:right_padding="20"
        ohos:bottom_padding="10"/>

</DependentLayout>