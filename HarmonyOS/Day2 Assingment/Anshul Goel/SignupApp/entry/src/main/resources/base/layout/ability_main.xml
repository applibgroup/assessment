<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">


    <Image
        ohos:id="$+id:imgview"
        ohos:image_src="$media:img1"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:top_padding="40fp"
        ohos:left_padding="40"
        ohos:right_padding="40"
        ohos:top_margin="-100fp"/>

    <Button
        ohos:id="$+id:button_signup"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_padding="20"
        ohos:bottom_padding="20"
        ohos:below="$id:imgview"
        ohos:top_margin="100fp"
        ohos:center_in_parent="true"
        ohos:left_padding="50"
        ohos:right_padding="50"
        ohos:background_element="$ohos:color:id_color_activated_end_dark"
        ohos:text="Signup"
        ohos:text_size="20fp" />

    <Button
        ohos:id="$+id:button_login"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_padding="20"
        ohos:bottom_padding="20"
        ohos:center_in_parent="true"
        ohos:below="$id:button_signup"
        ohos:top_margin="20fp"
        ohos:left_padding="50"
        ohos:right_padding="50"
        ohos:background_element="$ohos:color:id_color_activated_end_dark"
        ohos:text="Login"
        ohos:text_size="20fp" />

