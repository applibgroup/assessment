<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#dcdce6"
    >

    <Text
        ohos:id="$+id:app_name"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Sign Up"
        ohos:text_size="30fp"
        ohos:top_margin="15fp"
        ohos:center_in_parent="true"
        ohos:above="$id:firstname"
        ohos:left_margin="50fp"
        ohos:bottom_margin="30fp"
        />
    <Text
        ohos:id="$+id:a"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Gender"
        ohos:text_size="20fp"
        ohos:top_margin="25fp"
        ohos:below="$id:mobile"
        ohos:left_margin="50fp"
        />

    <TextField
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:above="$id:er1"
        ohos:focus_border_enable="true"
        ohos:hint="First Name"
        ohos:padding_for_text="true"
        ohos:left_padding="10fp"
        ohos:text_size="20fp"
        ohos:center_in_parent="true"
        ohos:id="$+id:firstname"
        ohos:background_element="white"
        />
    <Text
        ohos:id="$+id:er1"
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:text="Invalid first name - it cant be alphanumeric."
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:visibility="invisible"
        ohos:text_size="10fp"
        ohos:top_margin="3fp"
        ohos:center_in_parent="true"
        ohos:above="$id:lastname"
        ohos:left_padding="10fp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:top_margin="5fp"
        ohos:above="$id:er2"
        ohos:focus_border_enable="true"
        ohos:hint="Last Name"
        ohos:padding_for_text="true"
        ohos:left_padding="10fp"
        ohos:id="$+id:lastname"
        ohos:text_size="20fp"
        ohos:center_in_parent="true"
        ohos:background_element="white"
        />
    <Text
        ohos:id="$+id:er2"
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:text="Invalid last name - it cant be alphanumeric."
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:visibility="invisible"
        ohos:text_size="10fp"
        ohos:top_margin="3fp"
        ohos:center_in_parent="true"
        ohos:above="$id:email"
        ohos:left_padding="10fp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:above="$id:er3"
        ohos:id="$+id:email"
        ohos:top_margin="5fp"
        ohos:focus_border_enable="true"
        ohos:hint="Email"
        ohos:padding_for_text="true"
        ohos:left_padding="10fp"
        ohos:text_size="20fp"
        ohos:center_in_parent="true"
        ohos:background_element="white"
        />
    <Text
        ohos:id="$+id:er3"
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:text="Incorrect Email format"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:visibility="invisible"
        ohos:text_size="10fp"
        ohos:top_margin="3fp"
        ohos:center_in_parent="true"
        ohos:above="$id:password"
        ohos:left_padding="10fp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:top_margin="5fp"
        ohos:text_input_type="pattern_password"
        ohos:above="$id:er4"
        ohos:id="$+id:password"
        ohos:focus_border_enable="true"
        ohos:hint="Password"
        ohos:padding_for_text="true"
        ohos:left_padding="10fp"
        ohos:text_size="20fp"
        ohos:center_in_parent="true"
        ohos:background_element="white"
        />
    <Text
        ohos:id="$+id:er4"
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:text="Weak password - Must contain atleast 5 charcters."
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:visibility="invisible"
        ohos:text_size="10fp"
        ohos:top_margin="3fp"
        ohos:center_in_parent="true"
        ohos:above="$id:mobile"
        ohos:left_padding="10fp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:top_margin="5fp"
        ohos:id="$+id:mobile"
        ohos:focus_border_enable="true"
        ohos:hint="Mobile"
        ohos:padding_for_text="true"
        ohos:left_padding="10fp"
        ohos:text_size="20fp"
        ohos:center_in_parent="true"
        ohos:background_element="white"

        />
    <Text
        ohos:id="$+id:er5"
        ohos:height="match_content"
        ohos:width="250fp"
        ohos:text="Invalid phone number format."
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:visibility="invisible"
        ohos:text_size="10fp"
        ohos:top_margin="3fp"
        ohos:center_in_parent="true"
        ohos:below="$id:mobile"
        ohos:left_padding="10fp"
        />
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:lay"
        ohos:below="$id:a"
        ohos:orientation="horizontal"
        >
        <RadioButton
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:gender_male"
            ohos:text="Male"
            ohos:text_size="20fp"
            ohos:left_margin="30fp"
            />
        <RadioButton
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:gender_female"
            ohos:text="Female"
            ohos:text_size="20fp"
            ohos:left_margin="100fp"
            />
    </DirectionalLayout>

    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$id:signup_btn"
        ohos:text="Sign Up"
        ohos:below="$id:lay"
        ohos:background_element="white"
        ohos:center_in_parent="true"
        ohos:top_margin="20fp"
        ohos:left_padding="10fp"
        ohos:top_padding="5fp"
        ohos:bottom_padding="5fp"
        ohos:right_padding="10fp"
        ohos:text_size="20fp"
        />


</DependentLayout>