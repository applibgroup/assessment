<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
xmlns:ohos="http://schemas.huawei.com/res/ohos"
ohos:height="match_parent"
ohos:width="match_parent"
ohos:orientation="vertical"
ohos:alignment="vertical_center">
    <Text
        ohos:id="$+id:heading"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="Login"
        ohos:top_margin="100"
        ohos:layout_alignment="center"
        ohos:text_size="50fp"
        ohos:text_alignment="center"
        />
    <TextField
    ohos:id="$+id:login_email"
    ohos:below="$id:heading"
    ohos:height="40vp"
    ohos:width="match_parent"
    ohos:left_padding="20vp"
    ohos:right_padding="20vp"
    ohos:text_cursor_visible="true"
    ohos:padding_for_text="true"
    ohos:center_in_parent="true"
    ohos:basement="#000099"
    ohos:text_size="30fp"
    ohos:background_element="white"
    ohos:top_margin="100"
    ohos:text_alignment="vertical_center"
    ohos:hint="Email"/>
    <Text
        ohos:visibility="invisible"
        ohos:below="$id:login_email"
        ohos:id="$+id:login_email_error"
        ohos:top_margin="30"
        ohos:text="None"
        ohos:text_color="red"
        ohos:height="20vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:padding_for_text="true"
        ohos:basement="#000099"
        ohos:text_size="20fp"
        ohos:text_alignment="vertical_center"
        />
    <TextField
        ohos:id="$+id:login_password"
        ohos:below="$id:login_email_error"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:text_cursor_visible="true"
        ohos:padding_for_text="true"
        ohos:center_in_parent="true"
        ohos:basement="#000099"
        ohos:text_size="30fp"
        ohos:top_margin="50"
        ohos:text_alignment="vertical_center"
        ohos:hint="Password"/>
    <Text
        ohos:visibility="invisible"
        ohos:below="$id:login_password"
        ohos:id="$+id:login_password_error"
        ohos:top_margin="30"
        ohos:text="None"
        ohos:text_color="red"
        ohos:height="20vp"
        ohos:width="match_parent"
        ohos:left_padding="20vp"
        ohos:right_padding="20vp"
        ohos:padding_for_text="true"
        ohos:basement="#000099"
        ohos:text_size="20fp"
        ohos:text_alignment="vertical_center"
        />
    <Button
        ohos:id="$+id:loginBtn"
        ohos:below="$id:login_password_error"
        ohos:focus_border_enable="true"
        ohos:focus_border_width="200"
        ohos:focus_border_padding="40"
        ohos:top_margin="100"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:text="Log In"
        ohos:background_element="$ohos:color:id_color_button_normal"
        ohos:text_size="30fp"
        ohos:start_padding="20"
        ohos:top_padding="10"
        ohos:left_padding="20"
        ohos:right_padding="20"
        ohos:bottom_padding="10"/>

</DependentLayout>