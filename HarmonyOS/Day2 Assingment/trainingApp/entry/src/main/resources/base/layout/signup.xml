<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Sign Up"
        ohos:text_color="#ffa500"
        ohos:layout_alignment="center"
        ohos:text_size="40fp"></Text>
    <TextField
        ohos:id="$+id:first_name"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="First Name"
        ohos:text_size="$ohos:float:id_text_size_headline9"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_alignment="center"
        ohos:background_element="#ffb6c1"
        ohos:top_margin="30fp"
        ohos:layout_alignment="center"
        />
    <Text
        ohos:id="$+id:firstError"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Invalid first name - it can't be alphanumeric"
        ohos:text_size="15fp"
        ohos:layout_alignment="center"
        ohos:text_color="#ff0000"
        ohos:visibility="hide"></Text>
    <TextField
        ohos:id="$+id:last_name"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="Last Name"
        ohos:text_size="$ohos:float:id_text_size_headline9"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_alignment="center"
        ohos:background_element="#ffb6c1"
        ohos:top_margin="30fp"
        ohos:layout_alignment="center"
        />
    <Text
        ohos:id="$+id:lastError"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Invalid first name - it can't be alphanumeric"
        ohos:text_size="15fp"
        ohos:layout_alignment="center"
        ohos:text_color="#ff0000"
        ohos:visibility="hide"></Text>
    <TextField
        ohos:id="$+id:email"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="Email"
        ohos:text_size="$ohos:float:id_text_size_headline9"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_alignment="center"
        ohos:background_element="#ffb6c1"
        ohos:top_margin="30fp"
        ohos:layout_alignment="center"
        />
    <Text
        ohos:id="$+id:emailError"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Incorrect email format"
        ohos:text_size="15fp"
        ohos:layout_alignment="center"
        ohos:text_color="#ff0000"
        ohos:visibility="hide"></Text>
    <TextField
        ohos:id="$+id:password"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="Password"
        ohos:text_size="$ohos:float:id_text_size_headline9"
        ohos:text_input_type="pattern_password"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_alignment="center"
        ohos:top_margin="30fp"
        ohos:background_element="#ffb6c1"
        ohos:layout_alignment="center"
        />
    <Text
        ohos:id="$+id:passwordError"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Week password - must contain atleast 5 characters"
        ohos:text_size="15fp"
        ohos:layout_alignment="center"
        ohos:text_color="#ff0000"
        ohos:visibility="hide"></Text>
    <TextField
        ohos:id="$+id:mobile"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="Mobile"
        ohos:text_size="$ohos:float:id_text_size_headline9"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_alignment="center"
        ohos:focus_border_width="5fp"
        ohos:focus_border_enable="true"
        ohos:background_element="#ffb6c1"
        ohos:top_margin="30fp"
        ohos:layout_alignment="center"
        />
    <Text
        ohos:id="$+id:mobileError"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Invalid phone number format"
        ohos:text_size="15fp"
        ohos:layout_alignment="center"
        ohos:text_color="#ff0000"
        ohos:visibility="hide"></Text>
    <RadioContainer
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center"
        ohos:top_margin="30"
        ohos:bottom_margin="40">
        <RadioButton
            ohos:id="$+id:male"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Male"
            ohos:text_size="$ohos:float:id_text_size_headline9"
            ohos:background_element="#ffb6c1"
            ohos:right_margin="20vp"
            />
        <RadioButton
            ohos:id="$+id:female"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Female"
            ohos:left_margin="20vp"
            ohos:text_size="$ohos:float:id_text_size_headline9"
            ohos:background_element="#ffb6c1"
            />
    </RadioContainer>
    <Text
        ohos:id="$+id:radioError"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Select one gender"
        ohos:text_size="15fp"
        ohos:layout_alignment="center"
        ohos:text_color="#ff0000"
        ohos:visibility="hide"></Text>
    <Button
        ohos:id="$+id:signup"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="SIGNUP"
        ohos:text_size="20fp"
        ohos:background_element="#947fff"
        ohos:align_parent_left="true"
        ohos:align_parent_right="true"
        ohos:center_in_parent="true"
        ohos:top_margin="50"
        ohos:layout_alignment="center"
        ohos:bottom_padding="20"
        ohos:right_padding="20"
        ohos:top_padding="20"
        ohos:left_padding="20"></Button>

</DirectionalLayout>