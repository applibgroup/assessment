<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Image
        ohos:height="200vp"
        ohos:width="200vp"
        ohos:image_src="$media:applib_icon"
        ohos:scale_mode="zoom_center"/>

    <com.applib.jawahar_venugopal.hmosassignment.customview.CustomButton
        ohos:id="$+id:signup_button"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:button_color="#FF3F7FFF"
        ohos:button_text="Signup"
        ohos:button_text_color="#FFFFFFFF"
        ohos:button_text_size="45"
        ohos:top_margin="25vp"/>


    <com.applib.jawahar_venugopal.hmosassignment.customview.CustomButton
        ohos:id="$+id:login_button"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:button_color="#FF3F7FFF"
        ohos:button_text="Login"
        ohos:button_text_color="#FFFFFFFF"
        ohos:button_text_size="45"
        ohos:top_margin="12vp"/>

</DirectionalLayout>