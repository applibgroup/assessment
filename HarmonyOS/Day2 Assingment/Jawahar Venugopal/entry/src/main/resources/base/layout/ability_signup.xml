<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:margin="40fp"
        ohos:text="MYAPP"
        ohos:text_color="#FF3F7FFF"
        ohos:text_font="monospace"
        ohos:text_size="40fp"/>

    <TextField
        ohos:id="$+id:first_name"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="First Name"
        ohos:left_margin="20vp"
        ohos:multiple_lines="false"
        ohos:padding="10vp"
        ohos:right_margin="20vp"
        ohos:text_alignment="vertical_center"
        ohos:text_color="#FF000000"
        ohos:text_input_type="pattern_text"
        ohos:text_size="15fp"/>

    <Text
        ohos:id="$+id:first_name_error"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="15vp"
        ohos:text="Invalid First Name - Cannot be alphanumeric"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:text_size="12fp"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:last_name"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="Last Name"
        ohos:left_margin="20vp"
        ohos:multiple_lines="false"
        ohos:padding="10vp"
        ohos:right_margin="20vp"
        ohos:text_alignment="vertical_center"
        ohos:text_color="#FF000000"
        ohos:text_input_type="pattern_text"
        ohos:text_size="15fp"
        ohos:top_margin="10vp"/>

    <Text
        ohos:id="$+id:last_name_error"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="15vp"
        ohos:text="Invalid Last Name - Cannot be alphanumeric"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:text_size="12fp"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:email"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="Email"
        ohos:left_margin="20vp"
        ohos:multiple_lines="false"
        ohos:padding="10vp"
        ohos:right_margin="20vp"
        ohos:text_alignment="vertical_center"
        ohos:text_color="#FF000000"
        ohos:text_size="15fp"
        ohos:top_margin="10vp"/>

    <Text
        ohos:id="$+id:email_error"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="15vp"
        ohos:text="Invalid email format"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:text_size="12fp"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:password"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="Password"
        ohos:left_margin="20vp"
        ohos:multiple_lines="false"
        ohos:padding="10vp"
        ohos:right_margin="20vp"
        ohos:text_alignment="vertical_center"
        ohos:text_color="#FF000000"
        ohos:text_input_type="pattern_password"
        ohos:text_size="15fp"
        ohos:top_margin="10vp"/>

    <Text
        ohos:id="$+id:password_error"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="15vp"
        ohos:text="Weak Password - Must contain atleast 5 characters"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:text_size="12fp"
        ohos:visibility="hide"/>

    <TextField
        ohos:id="$+id:mobile"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_text_field"
        ohos:hint="Mobile"
        ohos:left_margin="20vp"
        ohos:multiple_lines="false"
        ohos:padding="10vp"
        ohos:right_margin="20vp"
        ohos:text_alignment="vertical_center"
        ohos:text_color="#FF000000"
        ohos:text_input_type="pattern_number"
        ohos:text_size="15fp"
        ohos:top_margin="10vp"/>

    <Text
        ohos:id="$+id:mobile_error"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="15vp"
        ohos:text="Invalid Mobile number Format"
        ohos:text_color="$ohos:color:id_color_badge_red"
        ohos:text_size="12fp"
        ohos:visibility="hide"/>

    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="15vp"
        ohos:text="Gender"
        ohos:text_color="#FF3F7FFF"
        ohos:text_size="20fp"
        ohos:top_margin="20vp"/>

    <RadioContainer
        ohos:id="$+id:gender_container"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="20vp"
        ohos:orientation="horizontal"
        ohos:top_margin="5vp">

        <RadioButton
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:check_element="$graphic:background_radio_button"
            ohos:marked="true"
            ohos:text="Male"
            ohos:text_size="20fp"/>

        <RadioButton
            ohos:height="50vp"
            ohos:width="match_content"
            ohos:check_element="$graphic:background_radio_button"
            ohos:left_margin="20vp"
            ohos:text="Female"
            ohos:text_size="20fp"/>
    </RadioContainer>

    <com.applib.jawahar_venugopal.hmosassignment.customview.CustomButton
        ohos:id="$+id:signup"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:button_color="#FF3F7FFF"
        ohos:button_text="Signup"
        ohos:button_text_color="#FFFFFFFF"
        ohos:button_text_size="45"
        ohos:top_margin="40vp"/>

</DirectionalLayout>