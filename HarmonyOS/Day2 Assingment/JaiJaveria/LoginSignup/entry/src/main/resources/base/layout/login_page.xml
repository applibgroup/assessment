<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="center">
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="$ohos:float:id_text_size_headline5"
        ohos:text="Login Page"/>
    <TextField
        ohos:id="$+id:xEmailIdL"
        ohos:height="match_content"
        ohos:width="200fp"
        ohos:hint="Email Id"
        ohos:text_size="$ohos:float:id_text_size_headline9"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_alignment="center"
        ohos:background_element="$graphic:background_text_field"
        ohos:top_margin="30fp"
        />
    <Text
        ohos:id="$+id:xEmailIdErrorL"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="13fp"
        ohos:text="Wrong Email id format. Must have one @ and '.' in that order and no numeral after '.'"
        ohos:text_alignment="center"
        ohos:visibility="hide"
        ohos:text_color="red"
        ohos:multiple_lines="true"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        />
    <TextField
        ohos:id="$+id:xPasswordL"
        ohos:height="match_content"
        ohos:width="200fp"
        ohos:hint="Enter Password"
        ohos:text_size="$ohos:float:id_text_size_headline9"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        ohos:text_alignment="center"
        ohos:background_element="$graphic:background_text_field"
        ohos:top_margin="30fp"
        ohos:text_input_type="pattern_password"
        />
    <Text
        ohos:id="$+id:xPasswordErrorL"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="13fp"
        ohos:text="Password must be of atleast 8 characters"
        ohos:text_alignment="center"
        ohos:visibility="hide"
        ohos:text_color="red"
        ohos:multiple_lines="true"
        ohos:left_padding="15fp"
        ohos:top_padding="5fp"
        ohos:right_padding="15fp"
        ohos:bottom_padding="5fp"
        />
    <Button
        ohos:id="$+id:xLoginSubmit"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Login"
        ohos:text_alignment="center"
        ohos:left_padding="10fp"
        ohos:top_padding="5fp"
        ohos:right_padding="10fp"
        ohos:bottom_padding="5fp"
        ohos:background_element="$graphic:background_button"
        ohos:text_size="$ohos:float:id_text_size_headline9"
        ohos:top_margin="50fp"
        />

</DirectionalLayout>